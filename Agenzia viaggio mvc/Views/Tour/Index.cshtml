@{
    Layout = "_BasicLayout";
}

@model List<Tour>

<div class="container text-center">
    <div class="row justify-content-center mb-3">
        <h1 class="mt-4">We Make Your Dreams Come True</h1>

        <p class="mt-3 w-50">Scopri il mondo con Logitravel e personalizza le tue vacanze. Viaggia con il tuo partner o con la famiglia, goditi un ​​All Inclusive... momenti speciali ti aspettano. Sorridi, le tue vacanze stanno iniziando
    </p>
    </div>

    <div class="container">

        <div class="row justify-content-center">

            @foreach(Tour elemento in Model)
            {

            <div class="col-11 col-md-5 me-4 col-xl-3 shadow p-3 mb-5 bg-body rounded px-0 py-0">
                <img src="@elemento.ImageUrl" alt="" class="img-fluid">
                <h4 class="bg-warning @elemento.ColorCard py-2">@elemento.Name</h4>

                <p class="p-3">@elemento.Description</p>

                <h6 class="border-top text-warning py-2 "><strong>@elemento.Days days/-@elemento.Destination /destinations</strong></h6>

                <p><strong>@elemento.Price</strong>/person</p>
            </div>
            }
        </div>

    </div>


</div>




